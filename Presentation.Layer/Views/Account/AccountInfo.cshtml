<div class="container-fluid user-info">
        <div class="row container-fluid">
                    <div class="user-info1 col-sm-6">
                       <form enctype="multipart/form-data" asp-controller="Account"  asp-action="AccountInfo"  method = "post">
                                    <div class="form-group info-line">  
                                                <label asp-for="UserName" class="control-label label-item"></label>  
                                                <input asp-for="UserName" class="info-input" value = "@Model.UserName"/>  
                                                <span asp-validation-for="UserName" class="text-danger"></span>  
                                     </div>
                                    
                                     <div class="form-group info-line">  
                                                <label asp-for="Email" class="control-label label-item"></label>  
                                                <input asp-for="Email" class="info-input" value = "@Model.Email"/>  
                                                <span asp-validation-for="Email" class="text-danger"></span>  
                                     </div>
                                     <div class="form-group info-line">  
                                                <label asp-for="About" class="control-label  label-item"></label>  
                                                <input asp-for="About" class="info-input" value = "@Model.About"/>  
                                                <span asp-validation-for="About" class="text-danger"></span>  
                                     </div>
                                    <div class="form-group info-line ">  
                                        <input type="submit" value="Save Changes" class="sub-buttom" />  
                      
                                    </div>
                                    

                                     </form>
                              </div>
                
            <div class="user-info1 col-sm-6">

            @if(@Model.IconURL == null)
            {
                <div><img style = "max-height: auto; max-width: 350px;" src="~/images/294e2b0f-3e7b-417a-96c7-533d5353f515_pexels-polina-chistyakova-12296893.jpg"></div>
            }
                <div><img style = "max-height: auto; max-width: 350px;" src="~/images/@Model.IconURL"></div>
           
            

                 <form enctype="multipart/form-data" asp-controller="Account"  asp-action="AccountInfoImg" method ="post" >

                       <div class="form-group">  
                             @*<label asp-for="IconFile" class="control-label label-item"></label>*@  
                             <div class="">

                                 <input asp-for="IconFile" class="custom-file-input" value = "@Model.IconURL" id="">

                                
                            </div>  
                            <span asp-validation-for="IconFile" class="text-danger"></span>

                               <div class="form-group info-line ">  
                                    <input type="submit" value="Save Image" class="sub-buttom" />  
                          
                               </div>
                         </div>
                  </form> 
             </div>
      </div>


</div>

                    <form enctype="multipart/form-data" asp-controller="Account"  asp-action="AccountInfoPassword">            
                                   
