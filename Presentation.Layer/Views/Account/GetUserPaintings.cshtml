@using Nix.Project.Models;
@model List<PaintingVM>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<link rel="stylesheet" type="text/css" href="~/css/Shop-items-page.css">
 
<link rel="stylesheet" type="text/css" href="~/lib\bootstrap/dist/css/bootstrap-grid.css">
<link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/">

<div class="col-sm-12">
            <div class="container shop-list">
              <div class="row">
                  @foreach(var item in Model){
                <div class="container shop-item col-sm-4">
                
                  <div class="container shop-item-content">
                      <img src="~/images/@Html.DisplayFor(modelItem =>item.ImgURL)" alt="Sample Photo" />
                  </div>
                  <div class="container shop-initem-content1">
                        <ul>
                          <li>@Html.DisplayFor(modelItem =>item.Name)</li>
                          <li>@Html.DisplayFor(modelItem =>item.Autor)</li>
                          <li>@Html.DisplayFor(modelItem =>item.Price)</li>
                        </ul>
                  </div>
                  <div class="container shop-item-content2">
                    <form  type="button" asp-controller=""  asp-action="" asp-route-id="" method="get">
                        <button class="items-button1">Add to cart</button>
                    </form>
                     @if (Model != null)
                                {
                  <form  type="button" asp-controller="Paintings"  asp-action="Details" asp-route-id="@item.PaintingId" method="get">
                                        <button class="items-button2">Details</button>
                  </form> }
             
                  </div>
                </div>
                }
                  
                </div>
              </div>
            </div>
